.custom-block
  border-radius 5px
  .custom-block-title
    font-weight 700
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width 0.313rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color #332E3C
    border-color #2fa515
    .custom-block-title
      color #2fa515
    .custom-block-title
      color #2fa515 !important
    p
      color #ccc !important
      code
        color #2fa515
        background-color rgba(#2fa515,0.0)
  
  &.warning
    background-color #332E3C
    border-color #FFB822
    .custom-block-title
      color #FFB822 !important
    p
      color #ccc !important
      code
        color #FFB822
        background-color rgba(#FFB822,0.0)

  &.danger
    background-color #332E3C
    border-color #ff0500
    .custom-block-title
      color #ff0500
    .custom-block-title
      color #ff0500 !important
    p
      color #ccc !important
      code
        color #ff0500
        background-color rgba(#ff0500,0.0)

  &.details
    display block
    position relative
    border-radius 6px
    margin 1.6em 0
    padding 1.6em
    background-color rgba(0,0,0,.3)
    border solid 1px #333
    summary
      color $primaryColor
      font-weight 500
      display flex
      align-items center
    div[class*="language-"]
      background rgba(255,255,255,1)
      border-radius 6px
      margin-top 1em
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
